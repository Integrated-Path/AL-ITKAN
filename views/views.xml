<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ITK" model="ir.ui.view">
            <field name="name">ITK_HR_APPL</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <field name="partner_name" position="after">
                    <label for="surname">Surname</label>
                    <field name="surname"/>
                </field>
                <field name="partner_mobile" position="after">
                    <field name="address"/>
                    <field name="hai"/>
                    <field name="st"/>
                    <field name="sec"/>
                    <field name="house"/>
                    <field name="nearest"/>
                    <field name="citizenship"/>
                    <field name="social_status"/>
                    
                </field>
                <field name="source_id" position="after">
                  
                    <field name="birthdate"/>
                    <field name="place_of_birth"/>
                    <field name="gender"/>
                    <field name="height"/>
                    <field name="weight"/>
                    <field name="religion"/>
                </field>

                <!-- Famiily Information-->

                <xpath expr="/form/sheet/group/group[2]" position="after">
                  <group colspan="2" col="2" string="Family Information">
                    <field name="father_profession"/>
                    <field name="mother_profession"/>            
                    <field name="first_name_1" />
                    <field name="profession_1" />
                    <field name="first_name_2"/>
                    <field name="profession_2"/>
                    <field name="first_name_3"/>
                    <field name="profession_3"/>
                    <field name="first_name_4"/>
                    <field name="profession_4"/>
                  </group>
                  <group string="Health and Limitations">
                    <field name="health_status"/>
                    <field name="disease"/>
                    <field name="limitaions"/>
                    <field name="limitaions_travel"/>
                  </group>
                  <group string="Referral Information">
                    <field name="referral_source"/>
                    <field name="other_referral_source"/>
                    <field name="preffered_fow"/>
                    <field name="preferred_cp"/>
                  </group>
                  <group colspan="2" col="2" string="Languages and Proficiency">
                    <group string="Arabic Language">
                      <field name="ar_r"/>
                      <field name="ar_w"/>
                      <field name="ar_s"/>
                      <field name="ar_u"/>
                      <field name="ar_o"/>
                    </group>
                    <group string="English Language">
                      <field name="en_r"/>
                      <field name="en_w"/>
                      <field name="en_s"/>
                      <field name="en_u"/>
                      <field name="en_o"/>
                    </group>
                    <group  string="Other">
                      <field name="other_name"/>
                      <field name="other_r"/>
                      <field name="other_w"/>
                      <field name="other_s"/>
                      <field name="other_u"/>
                      <field name="other_o"/>
                    </group>
                    <group  string="Other">
                      <field name="other_name_1"/>
                      <field name="other_r_1"/>
                      <field name="other_w_1"/>
                      <field name="other_s_1"/>
                      <field name="other_u_1"/>
                      <field name="other_o_1"/>
                    </group>
                  </group>
                  <group colspan="2" col="2" string="Education">
                    <group string="Primary">
                      <field name="primary_name" />
                      <field name="primary_years" />
                      <field name="primary_avg"/>
                    </group>
                      <group  string="Intermediate">
                      <field name="Intermediate_name"/>
                      <field name="Intermediate_years"/>
                      <field name="Intermediate_avg"/>
                    </group>
                      <group  string="Secondary">
                      <field name="secondary_name"/>
                      <field name="secondary_years"/>
                      <field name="secondary_avg"/>
                    </group>
                    <group  string="College">
                      <field name="college_name"/>
                      <field name="college_years"/>
                      <field name="college_avg"/>
                    </group>        
                  </group>
                  <group colspan="2" col="2"  string="Technical Skillzzz">
                    <group >
                      <field name="skill_1_Desc"/>
                      <field name="skill_2_Desc"/>
                      <field name="skill_3_Desc"/>
                      <field name="skill_4_Desc"/>
                      <field name="skill_5_Desc"/>
                      <field name="skill_6_Desc"/>
                      <field name="skill_7_Desc"/>
                      <field name="skill_8_Desc"/>                  
                    </group>
                    <group >                    
                      <field name="skill_1_level"/>
                      <field name="skill_2_level"/>
                      <field name="skill_3_level"/>
                      <field name="skill_4_level"/>
                      <field name="skill_5_level"/>
                      <field name="skill_6_level"/>
                      <field name="skill_7_level"/>
                      <field name="skill_8_level"/> 
                    </group>                                     
                  </group>
                  <group colspan="2" col="2" string="Administration Skillzzz">
                    <group>
                      <field name="business_correspondence_skill_level"/>
                      <field name="effective_communication_skill_level"/>
                      <field name="customer_service_skill_level"/>
                      <field name="team_work_skill_level"/>
                      <field name="Internet_and_research_skill_level"/>
                      <field name="ms_office_and_outlook_skill_level"/>
                      <field name="office_machine_skill_level"/>
                      <field name="typing_skill_level"/>
                    </group>
                    <group>
                      <field name="time_management_skill_level"/>
                      <field name="attention_to_detail_level"/>
                      <field name="goal_oriented_skill_level"/>
                      <field name="multi_tasking_skill_level"/>
                      <field name="follow_up_skill_level"/>
                      <field name="employee_relation_skill_level"/>
                      <field name="supervision_skill_level"/>
                    </group>

                  </group>
                  <group colspan="2" col="2" string="Sales Skillzzz">
                    <group>
                      <field name="relationship_building_skill_level"/>
                      <field name="time_management_skill_level"/>
                      <field name="research_information_gathering_skill_level"/>
                      <field name="medical_product_knowledge_skill_level"/>
                      <field name="business_communication_skill_level"/>
                      <field name="client_engagement_skill_level"/>
                      <field name="sales_presentations_demos_skill_level"/>                      
                    </group>
                    <group>
                      <field name="contract_negotiation_skill_level"/>
                      <field name="closing_skills_skill_level"/>
                      <field name="self_motivated_ambitious_skill_level"/>
                      <field name="adaptability_skill_level"/>
                      <field name="responsibility_skill_level"/>
                      <field name="goal_oriented_skill_level"/>
                      <field name="passionate_about_selling_skill_level"/>
                    </group>
                  </group>
                  <group colspan="2" col="2" string="Training and Certifications">
                    <group>
                      <field name="t1"/>
                      <field name="t1_year"/>
                      <field name="t1_awarded_by"/>
                      <field name="t1_country_city"/>
                      <field name="t2"/>
                      <field name="t2_year"/>
                      <field name="t2_awarded_by"/>
                      <field name="t2_country_city"/>
                    </group>
                    <group>
                      <field name="t3"/>
                      <field name="t3_year"/>
                      <field name="t3_awarded_by"/>
                      <field name="t3_country_city"/>
                      <field name="t4"/>
                      <field name="t4_year"/>
                      <field name="t4_awarded_by"/>
                      <field name="t4_country_city"/>
                    </group>
                  </group>
                  <group colspan="2" col="2" string="Employment History">
                     <group>
                      <field name="employer_name"/>
                      <field name="job_title"/>
                      <field name="employer_address"/>
                      <field name="employer_province"/> 
                      <field name="from_date"/>
                      <field name="to_date"/>
                      <field name="starting_slry"/>
                      <field name="ending_slry"/>
                      <field name="from_date"/>
                      <field name="to_date"/>
                      <field name="supervisor"/>
                      <field name="super_phone"/> 
                      <field name="reason_for_leaving"/>                           
                    </group>
                    <group>
                      <field name="employer_name_2"/>
                      <field name="job_title_2"/>
                      <field name="employer_address_2"/>
                      <field name="employer_province_2"/> 
                      <field name="from_date_2"/>
                      <field name="to_date_2"/>
                      <field name="starting_slry_2"/>
                      <field name="ending_slry_2"/>
                      <field name="from_date_2"/>
                      <field name="to_date_2"/>
                      <field name="supervisor_2"/>
                      <field name="super_phone_2"/> 
                      <field name="reason_for_leaving_2"/>                           
                    </group>                                      
                  </group>
                  <group colspan="2" col="2" string="Additional Information">
                    <group>
                      <field name="union_member"/>
                      <field name="driver_license"/>
                      <field name="driver_license_date"/>
                      <field name="means_of_transport"/>
                      <field name="good_appoint"/>
                      <field name="smoking"/>
                    </group>
                    <group>
                      <field name="long_hours"/>
                      <field name="start_date"/>
                      <field name="planning_to_study"/>
                      <field name="presently_employed"/>
                      <field name="contact_employer"/>
                    </group>



                  </group>



                </xpath>

                <!-- hidden existing fields that they dont need-->
                <field name="medium_id" position="replace">
                </field>
                <field name="type_id" position="replace">
                </field>
                <field name="source_id" position="replace">
                </field>
                
                


            </field>
        </record>

    </data>
</odoo>